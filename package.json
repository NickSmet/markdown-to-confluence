{
  "name": "markdown-to-confluence-publisher",
  "version": "1.0.4",
  "description": "A simple CLI tool to publish markdown files to Confluence with a single command",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "mtc": "./cli.js"
  },
  "files": [
    "cli.js",
    "reference-processor.js",
    "confluence-publisher.js",
    "cli-executor.js",
    "frontmatter-utils.js",
    "logger.js",
    ".markdown-confluence.sample.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node cli.js",
    "debug": "node --inspect-brk cli.js",
    "debug:verbose": "DEBUG=* node cli.js",
    "test": "jest --passWithNoTests",
    "lint": "./node_modules/.bin/eslint .",
    "format": "prettier --write .",
    "postinstall": "[ -n \"$CI\" ] || [ -n \"$INIT_CWD\" ] || husky install",
    "prepare": "exit 0",
    "prepublishOnly": "npm run lint && npm test"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "markdown",
    "confluence",
    "documentation",
    "cli",
    "markdown-to-confluence",
    "confluence-markup"
  ],
  "author": "Nikolai Smetannikov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NickSmet/markdown-to-confluence-publisher"
  },
  "dependencies": {
    "@markdown-confluence/cli": "github:NickSmet/markdown-confluence#main",
    "chalk": "^5.4.1",
    "debug": "^4.3.4",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3",
    "inquirer": "^9.2.15",
    "js-yaml": "^4.1.0",
    "yaml": "^2.7.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.5.1"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
