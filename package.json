{
  "name": "markdown-to-confluence",
  "version": "1.0.0",
  "description": "A simple CLI tool to publish markdown files to Confluence with a single command",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "mtc": "./cli.js"
  },
  "files": [
    "cli.js",
    "reference-processor.js",
    "confluence-publisher.js",
    "cli-executor.js",
    "frontmatter-utils.js",
    "logger.js",
    ".markdown-confluence.sample.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node cli.js",
    "debug": "node --inspect-brk cli.js",
    "debug:verbose": "DEBUG=* node cli.js",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky install",
    "prepublishOnly": "npm run lint && npm test"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "markdown",
    "confluence",
    "documentation",
    "cli",
    "markdown-to-confluence",
    "confluence-markup"
  ],
  "author": "Nikolai Smetannikov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NickSmet/markdown-confluence"
  },
  "dependencies": {
    "@markdown-confluence/cli": "^3.1.1",
    "chalk": "^4.1.2",
    "debug": "^4.3.4",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3",
    "inquirer": "^8.2.6",
    "js-yaml": "^4.1.0",
    "yaml": "^2.7.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
